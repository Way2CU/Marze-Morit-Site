<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header>
				<!-- Company logo -->
				<img
					class="logo"
					src="_BASEURL.'/site/images/logo-wide.svg'"
					alt="site_title"
					cms:eval="src"
					cms:constant="alt"
					/>

				<!-- Initial text and list, list bullets icons -->

				<cms:module
					name="articles"
					action="show"
					text_id="header"
					/>
				
				<!-- Call to action button -->
				<p class="btn-label"><cms:text constant="call_to_action" /></p>
				<a href="tel:..." class="call-to-action">
					
					<p><cms:text constant="phone"/></p>

					<cms:svg 
						file="symbol-defs.svg" 
						symbol="icon-phone-white"
						/>
				</a>

				<!-- Circle -->
				<img
					class="stamp"
					src="_BASEURL.'/site/images/svg-icons/stamp.svg'"
					alt="site_title"
					cms:eval="src"
					cms:constant="alt"
					/>

				<!-- Contact form -->
				<div>
					<h3><cms:text constant="title_contact_form"/></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
					<span><cms:text constant="message_contact_form"/></span>
				</div>
			</header>

			<!-- List of company-programs -->
			<div class="programs">
				<cms:module 
					name="articles"
					action="show"
					text_id="programs"
					/>
			</div>

			<!-- Offer section -->
			<div class="offer-section">
				
				<cms:module 
					name="articles"
					action="show"
					text_id="offer"
					/>
				
				<p class="btn-label"><cms:text constant="call_to_action" /></p>
				<a href="tel:..." class="call-to-action">
					
					<p><cms:text constant="phone"/></p>

					<cms:svg 
						file="symbol-defs.svg" 
						symbol="icon-phone-white"
						/>
				</a>
			</div>

			<!-- Gallery -->
			<div class="gallery">

				<cms:module
					name="articles"
					action="show"
					text_id="gallery"
					/>

				<div class="image-list">
					<cms:module 
						name="gallery"
						action="show_image_list"
						group="gallery"
						template="parts/gallery_list.xml"
						/>
				</div>
			</div>
			<footer>

				<!-- Logo -->
				<img
					class="logo"
					src="_BASEURL.'/site/images/logo-narrow.svg'"
					alt="site_title"
					cms:eval="src"
					cms:constant="alt"
					/>

				<!-- Circle -->
				<img
					class="stamp"
					src="_BASEURL.'/site/images/svg-icons/stamp.svg'"
					alt="site_title"
					cms:eval="src"
					cms:constant="alt"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="footer"
					/>

				<!-- Call to action button footer -->
				<p class="btn-label"><cms:text constant="call_to_action" /></p>
				<a href="tel:..." class="call-to-action">
					
					<p><cms:text constant="phone"/></p>

					<cms:svg 
						file="symbol-defs.svg" 
						symbol="icon-phone-white"
						/>
				</a>
				<!-- Footer Contact form -->
				<div>
					<h3><cms:text constant="title_contact_form_footer"/></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
					<span><cms:text constant="message_contact_form_footer"/></span>
				</div>
			</footer>
		</body>
	</html>
</document>
